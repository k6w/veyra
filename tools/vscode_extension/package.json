{
  "name": "veyra-lang",
  "displayName": "Veyra Language Support",
  "description": "Complete language support for Veyra - syntax highlighting, IntelliSense, diagnostics, and more",
  "version": "0.1.0",
  "publisher": "veyra-team",
  "author": {
    "name": "Veyra Language Team"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "veyra",
    "programming-language",
    "syntax-highlighting",
    "language-server",
    "intellisense",
    "autocomplete",
    "linter",
    "formatter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/veyra-lang/veyra"
  },
  "homepage": "https://github.com/veyra-lang/veyra",
  "bugs": {
    "url": "https://github.com/veyra-lang/veyra/issues"
  },
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "veyra",
        "aliases": [
          "Veyra",
          "veyra"
        ],
        "extensions": [
          ".vey"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "veyra",
        "scopeName": "source.veyra",
        "path": "./syntaxes/veyra.tmGrammar.json"
      }
    ],
    "snippets": [
      {
        "language": "veyra",
        "path": "./snippets/veyra.json"
      }
    ],
    "commands": [
      {
        "command": "veyra.run",
        "title": "Run Veyra File",
        "category": "Veyra",
        "icon": "$(play)"
      },
      {
        "command": "veyra.build",
        "title": "Build Veyra Project",
        "category": "Veyra",
        "icon": "$(tools)"
      },
      {
        "command": "veyra.format",
        "title": "Format Veyra File",
        "category": "Veyra",
        "icon": "$(symbol-keyword)"
      },
      {
        "command": "veyra.lint",
        "title": "Lint Veyra File",
        "category": "Veyra",
        "icon": "$(checklist)"
      },
      {
        "command": "veyra.newProject",
        "title": "New Veyra Project",
        "category": "Veyra",
        "icon": "$(new-folder)"
      },
      {
        "command": "veyra.showQuickActions",
        "title": "Veyra Quick Actions",
        "category": "Veyra",
        "icon": "$(menu)"
      },
      {
        "command": "veyra.showOutput",
        "title": "Show Veyra Output",
        "category": "Veyra",
        "icon": "$(output)"
      },
      {
        "command": "veyra.showProblems",
        "title": "Show Problems",
        "category": "Veyra",
        "icon": "$(warning)"
      },
      {
        "command": "veyra.openDocs",
        "title": "Open Documentation",
        "category": "Veyra",
        "icon": "$(book)"
      },
      {
        "command": "veyra.buildTools",
        "title": "Build Veyra Tools",
        "category": "Veyra",
        "icon": "$(tools)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .vey",
          "command": "veyra.run",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .vey",
          "command": "veyra.run",
          "group": "navigation@1"
        },
        {
          "when": "resourceExtname == .vey",
          "command": "veyra.format",
          "group": "1_modification@1"
        },
        {
          "when": "resourceExtname == .vey",
          "command": "veyra.lint",
          "group": "1_modification@2"
        }
      ],
      "commandPalette": [
        {
          "command": "veyra.run",
          "when": "resourceExtname == .vey"
        },
        {
          "command": "veyra.format",
          "when": "resourceExtname == .vey"
        },
        {
          "command": "veyra.lint",
          "when": "resourceExtname == .vey"
        }
      ]
    },
    "keybindings": [
      {
        "command": "veyra.run",
        "key": "ctrl+f5",
        "when": "resourceExtname == .vey"
      },
      {
        "command": "veyra.format",
        "key": "shift+alt+f",
        "when": "resourceExtname == .vey"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Veyra",
      "properties": {
        "veyra.compilerPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Veyra compiler executable (auto-detected if empty)"
        },
        "veyra.enableLanguageServer": {
          "type": "boolean",
          "default": true,
          "description": "Enable Veyra Language Server for enhanced IDE features"
        },
        "veyra.languageServerPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Veyra Language Server executable (auto-detected if empty)"
        },
        "veyra.veyra-fmtPath": {
          "type": "string",
          "default": "",
          "description": "Path to veyra-fmt executable (auto-detected if empty)"
        },
        "veyra.veyra-lintPath": {
          "type": "string",
          "default": "",
          "description": "Path to veyra-lint executable (auto-detected if empty)"
        },
        "veyra.veyra-pkgPath": {
          "type": "string",
          "default": "",
          "description": "Path to veyra-pkg executable (auto-detected if empty)"
        },
        "veyra.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format Veyra files on save"
        },
        "veyra.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically lint Veyra files on save"
        },
        "veyra.diagnostics.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time diagnostics"
        },
        "veyra.diagnostics.debounceMs": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 5000,
          "description": "Debounce time in milliseconds for diagnostics updates"
        },
        "veyra.intellisense.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable IntelliSense features (completion, hover, signature help)"
        },
        "veyra.intellisense.includeStdlib": {
          "type": "boolean",
          "default": true,
          "description": "Include standard library functions in completions"
        },
        "veyra.build.beforeRun": {
          "type": "boolean",
          "default": false,
          "description": "Build project before running"
        },
        "veyra.build.showOutput": {
          "type": "boolean",
          "default": true,
          "description": "Show build output in terminal"
        },
        "veyra.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}